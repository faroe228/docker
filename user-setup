#!/bin/bash
mkdir -p ~/.ssh
mv ~/authorized_keys ~/.ssh/

# Some git repositories I tend to use
clone() {
  for r; do
    git clone git://github.com/spencertipping/$r ~/r/initiative/$r
  done
}

mkdir -p ~/r/initiative
clone bashrc-tmux bash-hats bash-lambda bash-prompt cd \
      dotfiles nfu ni perl-objects zerovpn

git clone git://github.com/syl20bnr/spacemacs.git ~/.emacs.d

# Initialize dotfiles
rm ~/.bashrc
for file in ~/r/initiative/dotfiles/*; do
  ln -s ${file#$HOME/} ~/.${file##*/}
done

# Create a bin dir, just for good measure
mkdir ~/bin
